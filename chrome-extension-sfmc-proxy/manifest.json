{
  "manifest_version": 3,
  "name": "EFI SFMC Proxy",
  "version": "1.0.0",
  "description": "Proxy para upload de assets no Salesforce Marketing Cloud via EFI Builder",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.exacttargetapis.com/*",
    "https://*.salesforce.com/*",
    "https://*.marketingcloudapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.lovable.app/*",
        "*://*.lovable.dev/*",
        "http://localhost:*/*",
        "http://127.0.0.1:*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
